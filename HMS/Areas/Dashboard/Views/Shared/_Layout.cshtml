<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - HMS</title>


    <link href="~/Areas/Dashboard/Content/css/all.css" rel="stylesheet" />


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("button").click(function () {
                $("h2").hide();
            });
        });
    </script>


    @*<link href="css/styles.css" rel="stylesheet" />*@
    @*<script src="js/scripts.js"></script>*@
    <script src="~/Areas/Dashboard/Content/js/scripts.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/Areas/Dashboard/Content/css/styles.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">






</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">
                <i class="fas fa-hotel mr-1"></i>Hotel System
            </div>
            <div class="list-group list-group-flush">

                <a href="@Url.Action("Index","AccomodationTypes")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-building mr-1"></i> Accomodation Type
                </a>
                <a href="@Url.Action("Index","AccomodationPackages")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-building mr-1"></i> Accomodation Packages
                </a>

                <a href="@Url.Action("Index", "Accomodations")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-map-pin mr-1"></i> Accomodations
                </a>

                <a href="@Url.Action("Index","Roles")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-users-cog mr-1"></i> Roles
                </a>

                <a href="@Url.Action("Index","Users")" class="list-group-item list-group-item-action list-group-item-light p-3">
                    <i class="fas fa-users mr-1"></i> Users
                </a>


            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item active">
                                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                                    <i class="fas fa-sign-out-alt mr-1"></i>Logout
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <div class="container-fluid">
                @RenderBody()

            </div>
        </div>
    </div>

    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

}
    

   
    <!-- Bootstrap core JS-->
    <!-- Core theme JS-->
    @*<script src="js/scripts.js"></script>*@
    @*<script src="~/Areas/Dashboard/Content/js/scripts.js"></script>*@
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>*@
    <link href="~/Areas/Dashboard/Content/css/styles.css" rel="stylesheet" />
    @*<script src="~/Areas/Dashboard/Content/js/scripts.js"></script>*@

</body>
</html>
