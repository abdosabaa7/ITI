@model HMS.Areas.Dashboard.ViewModels.AccomodationTypeListingModel
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col col-lg-12">
        <h2>Accomodation Types</h2>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col col-lg-12">
       
            <form>
                <div class="input-group">
                    <input type="text" name="searchterm" class="form-control" placeholder="Searh." value="@Model.SearchTerm" required>
                    <div class="input-group-addon">
                        <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i>Search</button>
                        <a class="btn btn-outline-secondary" href="@Url.Action("Index", "AccomodationTypes")"><i class="fas fa-redo-alt"></i>Reset</a>
                        <button data-href="@Url.Action("Action", "AccomodationTypes")" class="data-btn btn btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="fas fa-plus"></i>Create</button>
                    </div>
                </div>
            </form>
       
    </div>

</div>
<div class="row">
    <div class="col col-lg-12">
        @{Html.RenderPartial("_Listing",Model);}
        <hr />
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" row="dialog">
    <div class="modal-dialog" role="document">

    </div>
</div>

<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),


        })
            .done(function (response){
                $("#actionModal .modal-dialog").html(response);
        });
    });
   
  
</script>

